  uses: actions/setup-python@v3
  with:
    python-version: '3.11'

- name: Install backend dependencies
  # *** NEW FIX: Setting the working directory to the 'backend' folder ***
  working-directory: ./backend
  run: |
    python -m pip install --upgrade pip
    # Now we only need 'requirements.txt' because we are already in the 'backend' directory
    pip install -r requirements.txt
  
- name: Lint with Flake8
  working-directory: ./backend
  run: |
    pip install flake8
    # Flake8 now runs on the current directory (backend)
    flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics

- name: Check code formatting with Black
  working-directory: ./backend
  run: |
    pip install black
    # Black now checks formatting for the current directory (backend)
    black --check .

